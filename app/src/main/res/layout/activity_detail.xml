<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/card_color"
        android:elevation="5dp"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/sideMenu"
          android:layout_width="56dp"
          android:layout_height="56dp"
          android:backgroundTint="@color/card_color"
          android:clickable="true"
          android:contentDescription="Side Menu"
          android:src="@drawable/ic_round_menu_24"
          />

      <TextView
          android:id="@+id/text_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/sansation_regular"
          android:text="@string/kreate"
          android:textColor="@color/customBlack"
          android:textSize="25sp"
          android:textStyle="normal"
          tools:layout_editor_absoluteX="320dp"
          tools:layout_editor_absoluteY="14dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="5dp"
      android:background="@drawable/white_card"
      android:layout_margin="16dp"
      app:layout_constraintTop_toBottomOf="@+id/header_bar"
      tools:layout_editor_absoluteX="-20dp"
      tools:layout_editor_absoluteY="68dp">

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:fontFamily="@font/sansation_regular"
        android:gravity="center_horizontal"
        android:lineHeight="36px"
        android:text="Details"
        android:textColor="@color/customBlack"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/de"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/de">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:text="Label:"
          android:fontFamily="@font/sansation_regular"
          android:textColor="@color/themeColor"
          android:textSize="25sp" />

      <TextView
          android:id="@+id/label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:text="John Doe"
          android:fontFamily="@font/sansation_regular"
          android:textColor="@color/customBlack"
          android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="10dp"
          android:text="Confidence:"
          android:fontFamily="@font/sansation_regular"
          android:textColor="@color/themeColor"
          android:textSize="25sp" />

      <TextView
          android:id="@+id/confidency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="10dp"
          android:text="John Doe"
          android:fontFamily="@font/sansation_regular"
          android:textColor="@color/customBlack"
          android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ll1"
        app:layout_constraintStart_toStartOf="@+id/ll1"
        app:layout_constraintTop_toBottomOf="@id/ll1">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/camera" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/gallery" />

    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>