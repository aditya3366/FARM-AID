<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <data>

   </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/weather_layout"
        tools:context=".Weather">

        <LinearLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:background="@drawable/card_background"
                android:id="@+id/city_search"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Search here"
                android:fontFamily="@font/sansation_regular"
                android:drawableStart="@drawable/ic_round_search_24"
                android:drawablePadding="20dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/customBlack"
                android:drawableTint="@color/customBlack"
                android:layout_margin="16dp">

            </EditText>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:id="@+id/current_location"
                android:src="@drawable/ic_round_my_location_24"
                android:layout_marginEnd="16dp"
                android:contentDescription="Current Location"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

            </ImageView>


        </LinearLayout>

        <FrameLayout
            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_layout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/sansation_regular"
                    android:text="Time"
                    android:textColor="@color/customBlack"
                    android:textSize="15sp">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/min_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="@font/sansation_regular"
                        android:text="Min Temp"
                        android:textColor="@color/customBlack">

                    </TextView>

                    <TextView
                        android:id="@+id/max_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/sansation_regular"
                        android:text="Max Temp"
                        android:textColor="@color/customBlack">

                    </TextView>


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sansation_regular"
                            android:text="12"
                            android:textColor="@color/customBlack"
                            android:textSize="70sp">


                        </TextView>

                        <TextView
                            android:id="@+id/feels_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/sansation_regular"
                            android:text="Feels Like"
                            android:textColor="@color/customBlack">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/weather_img"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_launcher_foreground">

                        </ImageView>

                        <TextView
                            android:id="@+id/weather_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/sansation_regular"
                            android:text="Weather"
                            android:textColor="@color/customBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </TextView>


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="50dp"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:id="@+id/options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:elevation="5dp"
                    android:padding="10dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        android:weightSum="3">


                        <LinearLayout
                            android:id="@+id/pressure_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/pressure_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/pressure"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/pressure_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:text="100"
                                android:fontFamily="@font/sansation_regular"
                                android:textColor="@color/customBlack"
                                android:textSize="22sp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:text="Pressure"
                                android:fontFamily="@font/sansation_regular"
                                android:textColor="@color/customBlack">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/humidity_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/humidity_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/humidity"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/humidity_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:fontFamily="@font/sansation_regular"
                                android:text="100"
                                android:textColor="@color/customBlack"
                                android:textSize="22sp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Humidity"
                                android:textColor="@color/customBlack">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wind_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/wind_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/wind"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/wind_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:fontFamily="@font/sansation_regular"
                                android:textColor="@color/customBlack"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="100">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Wind Speed">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/sunrise_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/sunrise_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/sunrise"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/sunrise_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:fontFamily="@font/sansation_regular"
                                android:text="100"
                                android:textColor="@color/customBlack"
                                android:textSize="22sp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Sunrise"
                                android:textColor="@color/customBlack">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sunset_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/sunset_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/sunset"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/sunset_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:textStyle="bold"
                                android:fontFamily="@font/sansation_regular"
                                android:textSize="22sp"
                                android:text="100">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Sunset">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/temp_f_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/temp_f"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/temperature"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/temp_f_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="100">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Â°F">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:id="@+id/ground_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/ground_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/ground_level"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/ground_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:fontFamily="@font/sansation_regular"
                                android:text="100">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Ground">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sea_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/sea_img"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/water"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/sea_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:textStyle="bold"
                                android:fontFamily="@font/sansation_regular"
                                android:textSize="22sp"
                                android:text="100">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Sea">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/country_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">


                            <ImageView
                                android:id="@+id/country"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/country"
                                app:tint="@color/customBlack">

                            </ImageView>

                            <TextView
                                android:id="@+id/country_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:text="100">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:textColor="@color/customBlack"
                                android:fontFamily="@font/sansation_regular"
                                android:text="Country">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </FrameLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone">

        </ProgressBar>

        <!-- <com.google.android.gms.ads.AdView
             android:id="@+id/banner_ads"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:adSize="BANNER"
             app:adUnitId="ca-app-pub-3940256099942544/6300978111"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/root_layout">

         </com.google.android.gms.ads.AdView>-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>